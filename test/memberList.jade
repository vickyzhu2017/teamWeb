doctype
head
   h1=title
   meta(charset="utf-8")
   block content
        .member-list
            table
                thead
                    tr
                    th 姓名
                    th 头像
                    th 更新时间
                    th 所在团队
                    th 职位
                    th 简介
                    th 性别
                    th 年龄
                    th 个人网站
                    th 查看
                    th 修改
                    th 删除
                tbody
                    each team in teams
                        if team.members && team.members.length > 0
                            each item in team.members
                                if  !item.del
                                    tr(class="item-id-#{item._id}")
                                        td #{item.name}
                                        td
                                            if item.image.indexOf('http:') > -1
                                                img(src="#{item.image}", alt="#{item.name}")
                                            else
                                                img(src="/images/#{item.image}", alt="#{item.name}")
                                        td #{moment(item.meta.refreshtime).format('YYYY/MM/DD')}
                                        td #{team.title}
                                        td #{item.job}
                                        td #{item.content}
                                        td #{item.sex}
                                        td #{item.age}
                                        td #{item.website}
                                        td: a(target="_blank",href="/member/#{item._id}") 查看
                                        td: a(target="_blank",href="../member/update/#{item._id}") 修改
                                        td
                                            button.del(type="button",data-id="#{item._id}") 删除
   script(src="/plug/jquery/2.1.3/jquery.min.js")
   script(src="/js/admin.js")